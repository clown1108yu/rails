<% @title = 'ログイン' %>
<div class="login-form">
  <h1><%= @title %></h1>
    <%= form_for @form, url: :staff_session do |f| %>
    <div>
      <%= f.label :email, 'メールアドレス' %>
      <%= f.text_field :email %>
    </div>
    <div>
      <%= f.label :passwoprd, 'パスワード' %>
      <%= f.text_field :password %>
    </div>
    <div>
      <%= f.submit 'ログイン' %>
    </div>
  <% end %>
</div>
